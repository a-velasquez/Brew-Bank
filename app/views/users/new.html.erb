<h3 class="my-3 font-weight-bold">Sign Up</h3>

<%= render partial: 'layouts/errors', locals: {object: @user}  %>

<%= form_for(:user) do |f|%>

<div class="form-group">
  <%= f.label :username %>
  <%= f.text_field :username, class: "form-control-sm" %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email, class: "form-control-sm" %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control-sm" %>
  <br>
  <%= f.submit 'Sign Up', class: "btn btn-success btn-sm" %>
</div>

<% end %>