<h1>Add Your Review For <%= @review.beer.name %></h1>

<%= form_for(@review) do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<br>

<div>
  <%= f.label :rating %>
  <%= f.number_field :rating, min:0, max:5 %>
</div>
<br>

<div>
  <%= f.label :content %>
  <%= f.text_area :content, size: "25x8" %>
</div>
<br>
<%= f.hidden_field :beer_id %>

  <%= f.submit %>
<% end %>