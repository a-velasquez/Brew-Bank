<% if params[:beer_id] %> 
    <h1> All Reviews for <%= @beer.name %> </h1>
  <% else %>
    <h1> All Reviews </h1>
 <% end %>

<% @reviews.each do |review| %> 
  <p> <%= review.beer.name %></p>
  <p> <%= review.title %></p>
  <p> <%= review.rating %></p>
  <p> <%= review.content %></p><br>
<% end %>