<h1 class="my-3 font-weight-bold"> 
<%= @review.user.username%>'s review for <%= @review.beer.brewer %>'s <%= @review.beer.name %> 
</h1><br>

<div class="card">
  <div class="card-body">
    <h4 class="font-weight-bold card-title"> <%= @review.title %> </h4><br>
    <p> Rating: <%= @review.rating %> Stars </p>
    <p> <%= @review.content %> </p>
    <%= button_to 'Edit This Review', edit_review_path, method: :get, class: "btn btn-primary" %>
  </div>
</div>


